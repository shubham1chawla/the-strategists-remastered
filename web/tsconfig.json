{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@activities/*": ["./features/activities/*"],
      "@advices/*": ["./features/advices/*"],
      "@game/*": ["./features/game/*"],
      "@login/*": ["./features/login/*"],
      "@predictions/*": ["./features/predictions/*"],
      "@trends/*": ["./features/trends/*"],
      "@theme/*": ["./features/theme/*"],
      "@shared/*": ["./shared/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["src", "vite-env.d.ts", ".eslintrc.cjs"]
}
